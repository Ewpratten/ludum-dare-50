{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"command": "build",
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "rust: cargo build"
		},
		{
			"type": "cargo",
			"command": "run",
			"problemMatcher": [
				"$rustc"
			],
			"label": "Launch Game"
		},
		{
			"type": "cargo",
			"command": "doc",
			"args": [
				"-p",
				"game_logic",
				"--no-deps",
				"--document-private-items"
			],
			"problemMatcher": [
				"$rustc"
			],
			"label": "Regenerate RustDoc"
		}
	]
}